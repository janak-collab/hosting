# GMPM Project .gitignore

# ============================================
# SECURITY - Sensitive files and credentials
# ============================================
.env
.env.*
!.env.example
.env.backup*
.git-credentials
*.pem
*.key
*.crt
*.p12
.htpasswds/passwd
config/database.php
config/email.php

# ============================================
# PERSONAL/SERVER DOTFILES
# ============================================
.bash*
.mysql_history
.lesshst
.lastlogin
.profile
.viminfo
.selected_editor
.sudo_as_admin_successful

# ============================================
# SERVER/HOSTING SPECIFIC
# ============================================
.imunify*
.myimunify*
.wp-toolkit*
.spamassassin*
.cagefs/
.caldav/
.cl.selector/
.config/
.cpanel/
.gnupg/
.local/
.sitepad/
.softaculous/
.trash/
mail/
ssl/
etc/
access-logs
cookies.txt

# ============================================
# APPLICATION
# ============================================
# Logs
*.log
error_log
logs/
storage/logs/*
!storage/logs/.gitkeep

# Cache
storage/cache/*
!storage/cache/.gitkeep
storage/sessions/*
!storage/sessions/.gitkeep

# Uploads
storage/uploads/*
!storage/uploads/.gitkeep

# Backups and dumps
backups/
*.sql
*.sql.gz
*.dump
*.backup
*.bak
*.zip
*.tar
*.tar.gz

# ============================================
# DEPENDENCIES
# ============================================
vendor/
node_modules/
bower_components/

# ============================================
# BUILD/TEMP FILES
# ============================================
tmp/
temp/
temp_restore/
*.tmp
*.temp
*.swp
*.swo
*~

# ============================================
# DEBUG/TEST FILES
# ============================================
*debug*.php
*test*.php
!app/tests/**
test-*.php
*.test.php
phpinfo.php

# ============================================
# IDE/EDITOR
# ============================================
.vscode/
.idea/
*.sublime-*
.project
.settings/
nbproject/
.buildpath

# ============================================
# OS FILES
# ============================================
# macOS
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
.AppleDouble
.LSOverride
Icon?

# Windows
Thumbs.db
ehthumbs.db
Desktop.ini
$RECYCLE.BIN/
*.lnk

# Linux
.directory

# ============================================
# DOCUMENTATION IN WRONG PLACES
# ============================================
public_html/*.md
public_html/**/*.md
!public_html/api/README.md

# ============================================
# SPECIAL RULES
# ============================================
# Keep these files
!.htaccess
!public_html/.htaccess
!app/.htaccess
!.htpasswds/
!.htpasswds/.htaccess
!.gitignore
!.gitconfig

# Ignore specific problematic files
public_html/assets/js/*.backup*
gmpm-new
www

# ============================================
# COMPOSER
# ============================================
composer.phar
/composer.lock

# ============================================
# NPM/YARN
# ============================================
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json
yarn.lock
